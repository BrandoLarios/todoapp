<div class="small-container center-block">
  <%= form_with(model: @list, local: true) do |f| %>
    <div class="padding">
      <%= f.label :name %>
      <%= f.text_field :name, class:"form-control" %>
    </div>
    <div class="padding">
      <%= f.label :description %>
      <%= f.text_field :description, class:"form-control" %>
    </div>
    <div class="padding">
      <%= f.submit :class => 'btn btn-success' %>
    </div>
  <% end %>
</div>